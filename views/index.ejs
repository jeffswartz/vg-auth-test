<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>OpenTok Hello World</title>
    <script src="https://static.opentok.com/v1/js/video-express.js"></script>
    <script type="text/javascript">
        var apiKey = '<%= apiKey %>';
        var appId = '<%= appId %>';
        var sessionId = '<%= sessionId %>';
        var token = '<%= token %>';
    </script>
    <style>
      body {
        margin: 0;
      }

      /* Assuming the name of the PreviewPublisher's container is previewContainer */
      #previewContainer {
        display: flex;
        flex-direction: column-reverse;
        align-items: center;
        justify-content: flex-end;
        border-color: black;
        border-radius: 5px;
        border-style: dashed;
        width: 640px;
        height: 480px;
        padding: 20px;
      }

      /* Assuming the name of the Room's container is roomContainer */
      #roomContainer {
        width: 100vw;
        height: calc(100vh - 90px);
        background-color: #ddd;
        position: relative;
      }
      #roomContainer > .OT_publisher {
        top: 25px;
        right: 25px;
        position: absolute;
        border-radius: 10px;
      }
      #roomContainer > .OT_screenshare {
        top: 25px;
        left: 25px;
        position: absolute;
        border-radius: 10px;
      }
      #log-div {
        background: silver;
        width: 100%;
        max-width: 800px;
        height: 400px;
        margin: 8px 0;
        overflow-y: auto;
        border: black 1px solid;
      }
    </style>
</head>
<body>
    <div id="roomContainer">
    </div>

    <div>
     <button id="start-archive-btn">Start archive</button>
     <button id="stop-archive-btn">Stop archive</button>
     <button id="force-disconnect-btn" click="forceDisconnect()">Force disconnect me</button>
     <button id="force-mute-stream-btn" click="forceMuteStream()">Force mute me</button>
     <button id="force-mute-all-btn" click="forceMuteAll()">Force mute all</button>
     <button id="disable-force-mute-btn" click="disableForceMute()">Disable force mute</button>
     <button id="signal-me-btn" click="signalMe()">Send signal to me</button>
     <button id="signal-all-btn" click="signalAll()">Send signal to everyone</button>
     <button id="get-stream-btn" click="getStream()">Get stream info in console</button>
     <button id="set-class-list-btn" click="setStreamClassLists()">Set my stream's class list</button>
     <button id="list-streams-btn">List streams in console</button>
     <button id="list-archives-btn">List archives in console</button>
   </div>
   <div id="log-div">
     <pre id="log-pre"></pre>
   </div>
    <script src="/js/helloworld.js"></script>
</body>
</html>
